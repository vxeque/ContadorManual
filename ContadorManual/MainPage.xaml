<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Contador Manual"
             x:Class="ContadorManual.MainPage">

    <VerticalStackLayout Margin="16" Spacing="10">
        <Label Text="Conteo: " Margin="4"/>
        <Border Margin="4">
            <VerticalStackLayout>
                <Label
                    Text="{Binding Path=Conteo}"
                    Margin="16"
                    Padding="8"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Border>

        <!--<Label Text="Rango del conteo:"/>-->

        <!--<Slider Minimum="1" Maximum="10" x:Name="RangoDelConteoSlider" />-->

        <HorizontalStackLayout Margin="16" Spacing="16" HorizontalOptions="Center">
            <Button Text="Contar" WidthRequest="130" Clicked="onClickedContadorButton"/>
            <Button Text="Reiniciar" WidthRequest="130" Clicked="onClickedReiniciarButton"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
